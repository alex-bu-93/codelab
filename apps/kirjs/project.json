{
  "name": "kirjs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/kirjs/src",
  "prefix": "kirjs",
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "ru": {
        "translation": "apps/kirjs/src/locale/kirjs.ru.xtb",
        "baseHref": ""
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/kirjs",
        "index": "apps/kirjs/src/index.html",
        "main": "apps/kirjs/src/main.ts",
        "polyfills": "apps/kirjs/src/polyfills.ts",
        "tsConfig": "apps/kirjs/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "node_modules/monaco-editor/",
            "output": "./assets/monaco/"
          },
          "apps/kirjs/src/favicon.ico",
          "apps/kirjs/src/assets",
          {
            "glob": "**/*",
            "input": "libs/code-demos/assets/runner/",
            "output": "./assets/runner/"
          }
        ],
        "styles": ["apps/kirjs/src/styles.css"],
        "scripts": []
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        },
        "ru": {
          "localize": ["ru"]
        },
        "production": {
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/kirjs/src/environments/environment.ts",
              "with": "apps/kirjs/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "kirjs:build:production"
        },
        "development": {
          "browserTarget": "kirjs:build:development"
        },
        "ru": {
          "browserTarget": "kirjs:build:production,ru"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "kirjs:build"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/kirjs/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/kirjs/**/*.ts", "apps/kirjs/**/*.html"]
      }
    }
  },
  "tags": []
}
